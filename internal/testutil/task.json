{
  "$id": "https://example.com/task.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task",
  "type": "object",
  "@config": {
    "collection": "task",
    "indexing": {
      "query": [
        {
          "fields": [
            "user"
          ]
        }
      ],
      "search": [],
      "aggregate": []
    }
  },
  "required": [
    "_id",
    "user",
    "content"
  ],
  "properties": {
    "_id": {
      "@primary": true,
      "type": "string",
      "description": "The user's id."
    },
    "user": {
      "type": "string",
      "description": "The id of the user who owns the task"
    },
    "content": {
      "type": "string",
      "description": "The content of the task"
    }
  }
}